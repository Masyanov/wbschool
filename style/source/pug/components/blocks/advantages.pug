mixin advantages()
  section.advantages
    .container
      .advantages__bg.advantages__bg--left
        +icon("great-bear", "1152", "772")
      .advantages__bg.advantages__bg--right
        +icon("little-bear", "720", "723")
      ul.advantages__list-courses
        +card-img(advantagesContentCard)
      h2.title.title--h2 Преимущества наших курсов
      ul.advantages__list
        +list-number(advantagesContent)
